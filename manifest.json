{
    "manifest_version": 2,
    "name": "Loop Button for YouTube™",
    "short_name": "YouTube™ Loop Button",
    "version": "1.0.2",
    "description": "Add a loop button to loop every YouTube videos you watch.",
    "icons": {
        "128": "icon_128.png"
    },

    "page_action": {
        "default_icon": "icon.png",
        "default_title": "YouTube Loop Button"
    },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
        "js": ["injector.js"]
    }],

    "permissions": ["tabs"],

    "author": "Avreghly Barra <avreghly@gmail.com>",
    "homepage_url": "https://shrotavre.com/youtube-loop"
}
